{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {}
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.next/**"]
  }
}
